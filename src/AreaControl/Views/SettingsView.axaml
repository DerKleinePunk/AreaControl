<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:splitViewPane="clr-namespace:AreaControl.ViewModels.SplitViewPane"
             x:Class="AreaControl.SettingsView"
             x:DataType="splitViewPane:SettingsViewModel">
    <Grid RowDefinitions="Auto, *" Margin="20">
        <TextBlock Grid.Row="0" Margin="0 20" FontSize="20" FontWeight="Bold">
            Settings
        </TextBlock>
        <Border Grid.Row="1" Background="#2d323c" CornerRadius="10">
            <Image Source="/Assets/Images/logo_big.png" Height="320" />
        </Border>
    </Grid>

</UserControl>
